									<input type="password" class="form-control" ng-model="userModel.password" placeholder="パスワード">
								</div>
							</div>
						</div>
						<div class="row" style="margin-top: 10px; margin-bottom: 10px;">
							<div class="form-group" ng-class="{'has-error': isAttrError(errors.password)}">
								<div class="col-lg-9" style="margin-left: 96px;">
									<input style="float: left;" type="checkbox" ng-model="userModel.save_login_flg" ng-true-value="1" ng-false-value="0">&nbsp;ログイン状態を1ヶ月保持する
								</div>
