<p id="notice"><%= notice %></p>

<h1>Listing Connections</h1>

<table>
  <thead>
    <tr>
      <th>Connect kbn</th>
      <th>From user</th>
      <th>To user</th>
      <th>Target</th>
      <th>Create user</th>
      <th>Update user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.connect_kbn %></td>
        <td><%= connection.from_user_id %></td>
        <td><%= connection.to_user_id %></td>
        <td><%= connection.target_id %></td>
        <td><%= connection.create_user_id %></td>
        <td><%= connection.update_user_id %></td>
        <td><%= link_to 'Show', connection %></td>
        <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
        <td><%= link_to 'Destroy', connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

